%h2
  = @fighter.name
= link_to( image_tag(@fighter.get_favorite_image(current_user)), favorites_admin_fighter_path(@fighter), :method => :put)
%p
  = "created by #{@fighter.user} on #{@fighter.date}"

%br  

%div.img_container
  = image_tag("placeholder.jpg")
%p
  %b Name:
  = h @fighter.name
%p
  %b Fighter type:
  = h @fighter.fighter_type
%p
  %b Primary weapon:
  = h @fighter.primary_weapon
%p
  %b Secondary weapon:
  = h @fighter.secondary_weapon
%p
  %b Pilot name:
  = h @fighter.pilot_name
%p
  = h @fighter.description
%br
%h2
  Cost: #{h @fighter.cost}
  
= link_to 'Edit', edit_admin_fighter_path(@fighter)
