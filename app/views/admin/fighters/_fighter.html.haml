%tr
  %td
    = image_tag(fighter.photo.url(:thumb))
  %td
    = link_to fighter.name, admin_fighter_path(fighter)
    =h "by #{fighter.user} (#{fighter.cost} ArmadaBucks)"
    %br
    = sample_with_more(fighter.description, 50)
  %td
    = link_to image_tag('icon_small_show.png'), admin_fighter_path(fighter), :title => "view fighter"
    = link_to image_tag('icon_small_edit.png'), edit_admin_fighter_path(fighter), :title => "edit fighter"
    = link_to image_tag('icon_small_delete.png'), admin_fighter_path(fighter), :confirm => 'Are you sure?', :method => :delete,  :title => "delete fighter"
